function renderList(id, data, suffix="") {
  const el = document.getElementById(id);
  if(!el) return;
  el.innerHTML = data.map(p => `
    <div class="diamond-item" onclick="openPopup('${p[0]} - ${p[1]} Ks ${suffix}')">
      <img src="${p[2]}">
      <span>${p[0]}</span>
      <div class="price">${p[1]} Ks</div>
    </div>`).join('');
}

