  renderList('grid-mal-pass', malData.pass, "(MY)"); renderList('grid-mal-promo', malData.promo, "(MY)"); renderList('grid-mal-direct', malData.direct, "(MY)");
  renderList('grid-ph-pass', phData.pass, "(PH)"); renderList('grid-ph-promo', phData.promo, "(PH)"); renderList('grid-ph-direct', phData.direct, "(PH)");
  renderList('grid-sg-pass', sgData.pass, "(SG)"); renderList('grid-sg-promo', sgData.promo, "(SG)"); renderList('grid-sg-direct', sgData.direct, "(SG)");
}
renderAll();

function showPage(id) { document.querySelectorAll('.page').forEach(p => p.classList.remove('active')); document.getElementById(id).classList.add('active'); window.scrollTo(0,0); }
function copyNum(t) { navigator.clipboard.writeText(t); alert("Copied: " + t); }
function openPopup(d){ selectedDiamond = d; document.getElementById('diaTitle').innerText = d; document.getElementById('popup').style.display = "flex"; }
function closePopup(){ document.getElementById('popup').style.display = "none"; }
function previewImg(e){ const r=new FileReader(); r.onload=()=> { const i=document.getElementById('preview-img'); i.src=r.result; i.style.display="block"; }; r.readAsDataURL(e.target.files[0]); }

async function sendOrder(){  
  const name=document.getElementById('userName').value, gid=document.getElementById('gid').value, sid=document.getElementById('sid').value, method=document.getElementById('method').value, img=document.getElementById('img').files[0];
  if(!name || !gid || !sid || !method || !img) return alert("á€¡á€á€»á€€á€ºá€¡á€œá€€á€ºá€¡á€¬á€¸á€œá€¯á€¶á€¸ á€–á€¼á€Šá€·á€ºá€•á€±á€¸á€•á€«");  
  const btn=document.getElementById('submit-btn'); btn.disabled=true; btn.innerText="â³ Sending...";
  const fd=new FormData(); fd.append("chat_id", CHAT_ID); fd.append("photo", img);
  fd.append("caption", `ğŸ”” **ORDER**\nğŸ‘¤ Name: ${name}\nğŸ’ Item: ${selectedDiamond}\nğŸ® ID: ${gid}(${sid})\nğŸ’³ Pay: ${method}`);
  try {
    const res = await fetch(`https://api.telegram.org/bot${BOT_TOKEN}/sendPhoto`, {method:"POST", body:fd});
    if(res.ok){ alert("âœ…á€¡á€±á€¬á€„á€ºá€™á€¼á€„á€ºá€•á€«á€á€Šá€º"); location.reload(); }
  } catch(e){ alert("Error!"); btn.disabled=false; }
}
