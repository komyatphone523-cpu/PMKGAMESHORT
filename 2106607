let selectedDiamond = "";  
let currentServer = "Normal Server";  
  
function switchServer(id, btn) {  
  document.querySelectorAll('.server-content').forEach(c => c.classList.remove('active'));  
  document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));  
  document.getElementById(id).classList.add('active');  
  btn.classList.add('active');  
  currentServer = id === 'normal' ? "Normal Server" : "Malaysia Server";  
}  
  
function openPopup(d){ 
  selectedDiamond = d; 
  document.getElementById('diaTitle').innerText = d; 
  document.getElementById('popup').style.display = "flex"; 
  const btn = document.getElementById('submit-btn');
  btn.disabled = false;
  btn.innerText = "ğŸ“© Confirm Order";
}  
function closePopup(){ document.getElementById('popup').style.display = "none"; }  
  
document.getElementById('img').onchange = (e) => {  
  const p = document.getElementById('preview');  
  p.src = URL.createObjectURL(e.target.files[0]); p.style.display = "block";  
};  

function playSuccessSound() {
  const sound = document.getElementById('successSound');
  sound.play().catch(e => console.log("Audio play blocked."));
}
  
async function sendOrder(){  
  const gid = document.getElementById('gid').value;  
  const sid = document.getElementById('sid').value;  
  const method = document.getElementById('method').value;  
  const payAmt = document.getElementById('pay').value;
  const imgFile = document.getElementById('img').files[0];  
  const btn = document.getElementById('submit-btn');

  if(!gid || !sid || !method || !imgFile) return alert("á€¡á€á€»á€€á€ºá€¡á€œá€€á€ºá€…á€¯á€¶á€¡á€±á€¬á€„á€ºá€–á€¼á€Šá€·á€ºá€•á€«");  
  
  btn.disabled = true;
  btn.innerText = "â³ Processing...";

  const time = new Date().toLocaleString();
  const formData = new FormData();  
  formData.append("chat_id", CHAT_ID);  
  formData.append("caption", `ğŸ”” **NEW ORDER** ğŸ””\n\nğŸ‘¤ User: ${localStorage.getItem('pmk_user')}\nğŸŒ Server: ${currentServer}\nğŸ’ Item: ${selectedDiamond}\nğŸ® ID: ${gid} (${sid})\nğŸ’³ Method: ${method}\nğŸ’° Amount: ${payAmt}\nâ° Time: ${time}`);  
  formData.append("photo", imgFile);  
  
  try {
    const res = await fetch(`https://api.telegram.org/bot${BOT_TOKEN}/sendPhoto`, { method:"POST", body: formData });  
    if(res.ok) {  
      playSuccessSound(); 
      saveOrder(selectedDiamond, gid, sid); 
      closePopup();  
      const t = document.getElementById('toast'); 
      t.style.display = "block"; 
      setTimeout(()=> t.style.display="none", 3000);  
      // Reset fields
      document.getElementById('pay').value = "";
      document.getElementById('img').value = "";
      document.getElementById('preview').style.display = "none";
    } else {
      alert("Error á€–á€¼á€…á€ºá€á€½á€¬á€¸á€•á€«á€á€Šá€ºá‹ á€•á€¼á€”á€ºá€€á€¼á€­á€¯á€¸á€…á€¬á€¸á€€á€¼á€Šá€·á€ºá€•á€«á‹");
      btn.disabled = false;
      btn.innerText = "ğŸ“© Confirm Order";
    }
  } catch (e) {
    alert("Connection Error!");
    btn.disabled = false;
    btn.innerText = "ğŸ“© Confirm Order";
  }
}  
  
function saveOrder(item, gid, sid) {  
  let h = JSON.parse(localStorage.getItem('orders')) || [];  
  h.push({ item, gid, sid, date: new Date().toLocaleString() });  
  localStorage.setItem('orders', JSON.stringify(h)); loadHistory();  
}  
  
function loadHistory() {  
  const list = document.getElementById('history-list');  
  let h = JSON.parse(localStorage.getItem('orders')) || [];  
  if(h.length === 0) { list.innerHTML = "<p style='text-align:center; font-size:11px;'>á€™á€¾á€á€ºá€á€™á€ºá€¸á€™á€›á€¾á€­á€•á€«á‹</p>"; return; }  
  list.innerHTML = h.reverse().slice(0,5).map(o => `<div class="history-item"><b>${o.item}</b><br>ID: ${o.gid}(${o.sid})<br><small>${o.date}</small></div>`).join('');  
}  
</script>  
</body>  
</html>
